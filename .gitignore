# Crea un archivo .gitignore básico
echo "# Archivos del sistema" > .gitignore
echo ".DS_Store" >> .gitignore
echo "Thumbs.db" >> .gitignore
echo "" >> .gitignore
echo "# Entorno virtual" >> .gitignore
echo "venv/" >> .gitignore
echo "env/" >> .gitignore
echo "ENV/" >> .gitignore
echo "" >> .gitignore
echo "# Caché de Python" >> .gitignore
echo "__pycache__/" >> .gitignore
echo "*.py[cod]" >> .gitignore
echo "*$py.class" >> .gitignore
echo ".pytest_cache/" >> .gitignore
echo "" >> .gitignore
echo "# Archivos de configuración local" >> .gitignore
echo ".env" >> .gitignore